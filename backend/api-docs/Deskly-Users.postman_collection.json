      }
    },
    {
      "name": "Buscar Perfil do Usuário Logado",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/profile",
          "host": ["{{baseUrl}}"],
          "path": ["users", "profile"]
        },
        "description": "Retorna o perfil do usuário autenticado"
      }
    },
    {
      "name": "Listar Usuários - CLIENT",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/CLIENT",
          "host": ["{{baseUrl}}"],
          "path": ["users", "CLIENT"]
        },
        "description": "Lista todos os usuários com role CLIENT"
      }
    },
    {
