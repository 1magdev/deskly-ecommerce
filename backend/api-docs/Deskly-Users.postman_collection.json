          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"(11) 99999-8888\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["users", "1"]
        },
        "description": "Atualiza apenas o telefone do usuário (atualização parcial)"
      }
    },
    {
      "name": "Atualizar Usuário - Dados Pessoais",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullname\": \"João Silva Santos Jr\",\n  \"gender\": \"Masculino\",\n  \"birthDate\": \"1990-05-15\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["users", "1"]
        },
        "description": "Atualiza apenas dados pessoais do usuário (atualização parcial)"
      }
    },
    {
      "name": "Atualizar Usuário - Dados de Pagamento",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"cardHolderName\": \"JOAO SILVA\",\n  \"cardLastDigits\": \"9999\",\n  \"cardBrand\": \"Visa\",\n  \"cardExpiration\": \"12/2027\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/1",
