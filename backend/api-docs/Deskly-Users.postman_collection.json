{
  "info": {
    "name": "Deskly - Users API",
    "description": "Collection para gerenciamento de usuários do Deskly E-commerce",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "seu_token_aqui",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Criar Usuário - Completo",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullname\": \"João da Silva\",\n  \"email\": \"joao.silva@example.com\",\n  \"cpf\": \"123.456.789-00\",\n  \"gender\": \"Masculino\",\n  \"birthDate\": \"1990-05-15\",\n  \"password\": \"senha123\",\n  \"confirmPassword\": \"senha123\",\n  \"role\": \"CLIENT\",\n  \"addressStreet\": \"Rua das Flores\",\n  \"addressNumber\": \"123\",\n  \"addressComplement\": \"Apto 45\",\n  \"addressNeighborhood\": \"Centro\",\n  \"addressCity\": \"São Paulo\",\n  \"addressState\": \"SP\",\n  \"addressZipcode\": \"01234-567\",\n  \"cardHolderName\": \"JOAO DA SILVA\",\n  \"cardLastDigits\": \"1234\",\n  \"cardBrand\": \"Visa\",\n  \"cardExpiration\": \"12/2025\",\n  \"phone\": \"(11) 98765-4321\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": ["{{baseUrl}}"],
          "path": ["users"]
        },
        "description": "Cria um novo usuário com todos os campos disponíveis"
      }
    },
    {
      "name": "Criar Usuário - Campos Mínimos",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullname\": \"Maria Santos\",\n  \"email\": \"maria.santos@example.com\",\n  \"cpf\": \"987.654.321-00\",\n  \"password\": \"senha456\",\n  \"confirmPassword\": \"senha456\",\n  \"role\": \"CLIENT\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": ["{{baseUrl}}"],
          "path": ["users"]
        },
        "description": "Cria um novo usuário com apenas os campos obrigatórios"
      }
    },
    {
      "name": "Atualizar Usuário - Completo",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullname\": \"João da Silva Santos\",\n  \"cpf\": \"123.456.789-00\",\n  \"gender\": \"Masculino\",\n  \"birthDate\": \"1990-05-15\",\n  \"password\": \"novaSenha123\",\n  \"confirmPassword\": \"novaSenha123\",\n  \"role\": \"CLIENT\",\n  \"addressStreet\": \"Av. Paulista\",\n  \"addressNumber\": \"1000\",\n  \"addressComplement\": \"Sala 200\",\n  \"addressNeighborhood\": \"Bela Vista\",\n  \"addressCity\": \"São Paulo\",\n  \"addressState\": \"SP\",\n  \"addressZipcode\": \"01310-100\",\n  \"cardHolderName\": \"JOAO DA SILVA SANTOS\",\n  \"cardLastDigits\": \"5678\",\n  \"cardBrand\": \"MasterCard\",\n  \"cardExpiration\": \"06/2026\",\n  \"phone\": \"(11) 91234-5678\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["users", "1"]
        },
        "description": "Atualiza todos os campos de um usuário"
      }
    },
    {
      "name": "Atualizar Usuário - Apenas Endereço",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"addressStreet\": \"Rua Nova\",\n  \"addressNumber\": \"500\",\n  \"addressNeighborhood\": \"Jardim América\",\n  \"addressCity\": \"São Paulo\",\n  \"addressState\": \"SP\",\n  \"addressZipcode\": \"05468-000\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["users", "1"]
        },
        "description": "Atualiza apenas o endereço do usuário (atualização parcial)"
      }
    },
    {
