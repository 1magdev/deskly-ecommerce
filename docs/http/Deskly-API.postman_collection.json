									"    pm.environment.set(\"token\", response.token);",
									"    pm.environment.set(\"userEmail\", response.email);",
									"    pm.environment.set(\"userRole\", response.role);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"fullname\": \"João Silva\",\n    \"email\": \"joao.silva@email.com\",\n    \"cpf\": \"12345678901\",\n    \"password\": \"senha123\",\n    \"confirmPassword\": \"senha123\",\n    \"role\": \"CLIENTE\"\n}"
						},
						"url": {
